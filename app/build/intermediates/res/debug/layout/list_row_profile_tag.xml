<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/pelmelBackground"
    >


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/tagImage"
        android:src="@drawable/bear"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tag.BEAR"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/tagLabel"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="\u2713"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:gravity="right"
        android:layout_marginRight="25dp"
        android:layout_gravity="center"
        android:id="@+id/tagCheckmark"/>
</LinearLayout><!-- From: file:/Users/cfondacci/Documents/pelmelguide/app/src/main/res/layout/list_row_profile_tag.xml -->
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" android:background="@color/pelmelBackground" >

    <!-- ListRow Left sied Thumbnail image -->



    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/chat_image"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/no_photo_profile_small"
        app:riv_corner_radius="25dp"
        app:riv_border_width="1dp"
        app:riv_border_color="#ffffff"
        />




    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/chat_message_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="68dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/chat_image"
        android:background="@drawable/bg_message"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:riv_corner_radius="8dp"
        />
    <TextView
        android:id="@+id/msgDate"
        android:layout_width="fill_parent"
        android:layout_height="17dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="68dp"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@id/chat_message_image"
        android:gravity="left"
        android:textColor="#EC7700"
        android:text="TextView"
        android:textSize="@dimen/chat_msg_date_size" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/chat_message_image"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:id="@+id/usernameLabel"
        android:layout_below="@+id/chat_image"
        android:layout_alignLeft="@id/chat_image"
        android:layout_alignRight="@id/chat_image"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="4dp"
        android:gravity="center"/>


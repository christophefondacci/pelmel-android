<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="63dp"
              android:background="@color/pelmelBackground"
    >

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:text="--"
        android:gravity="center"
        android:background="@drawable/bg_delete_icon"
        android:id="@+id/deleteButton"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/photoImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/deleteButton"
        android:layout_marginLeft="20dp"
        android:src="@drawable/no_photo"
        app:riv_corner_radius="32dp"
        app:riv_border_width="2dp"
        app:riv_border_color="#ffffff"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text \u21e7"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/photoImage"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/photoLabel"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upButton"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/up_arrow"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/downButton"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/upButton"
        android:layout_marginRight="10dp"
        android:src="@drawable/down_arrow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@id/downButton"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Delete"
        android:textColor="@color/white"
        android:background="#ff0000"
        android:id="@+id/deleteConfirmButton"
        android:visibility="invisible"
        />

</RelativeLayout><!-- From: file:/Users/cfondacci/Documents/pelmelguide/app/src/main/res/layout/list_row_profile_photo.xml -->
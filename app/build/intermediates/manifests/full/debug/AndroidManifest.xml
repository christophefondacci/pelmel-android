            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.nextep.pelmel.activities.ListEventsActivity" />
        <activity android:name="com.nextep.pelmel.activities.ChatActivity" />

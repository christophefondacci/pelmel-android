<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="115dp" android:background="@color/pelmelBackground">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/thumbImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/no_photo_small"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        app:riv_corner_radius="25dp"
        app:riv_border_width="1dp"
        app:riv_border_color="#ffffff"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Medium Text"
        android:id="@+id/titleLabel"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        android:layout_toLeftOf="@+id/distanceLabel"
        android:layout_toRightOf="@+id/thumbImage"
        android:layout_marginRight="8dp"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Small Text"
        android:textColor="#969696"
        android:id="@+id/distanceIntroLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Small Text"
        android:textColor="#969696"
        android:id="@+id/distanceLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/titleLabel"
        android:layout_marginRight="15dp"/>

    <ImageView
        android:layout_width="@dimen/placeTypeIconSize"
        android:layout_height="@dimen/placeTypeIconSize"
        android:id="@+id/subtitleIcon"
        android:layout_below="@+id/titleLabel"
        android:layout_marginTop="1.5dp"
        android:layout_alignLeft="@+id/titleLabel"
        android:src="@drawable/snp_icon_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bar"
        android:id="@+id/subtitleLabel"
        android:textColor="#ffd54f"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/subtitleIcon"
        android:layout_below="@id/titleLabel"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_toLeftOf="@+id/hoursBadgeTitleLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="OPEN"
        android:textColor="#72FF00"
        android:textSize="13sp"
        android:id="@+id/hoursBadgeTitleLabel"
        android:layout_alignTop="@+id/subtitleLabel"
        android:layout_alignRight="@+id/distanceLabel" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2hrs left"
        android:textColor="#72FF00"
        android:textSize="13sp"
        android:id="@+id/hoursBadgeSubtitleLabel"
        android:layout_below="@id/hoursBadgeTitleLabel"
        android:layout_alignRight="@+id/distanceLabel" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/subtitleIcon"
        android:layout_alignLeft="@+id/thumbImage"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/countersContainerView">
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:layout_below="@id/countersContainerView"
        />
</RelativeLayout>
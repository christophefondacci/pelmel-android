<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" android:background="@color/pelmelBackground" >

    <!-- ListRow Left sied Thumbnail image -->



    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/chat_image"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/no_photo_profile_small"
        app:riv_corner_radius="25dp"
        app:riv_border_width="1dp"
        app:riv_border_color="#ffffff"
        />
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="1"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/badgeLabel"
        android:layout_alignTop="@id/chat_image"
        android:layout_alignRight="@+id/chat_image"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="-5dp"
        android:background="@drawable/bg_badge"
        />
    <TextView
        android:id="@+id/msgDate"
        android:layout_width="fill_parent"
        android:layout_height="17dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="68dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/chat_image"
        android:gravity="left"
        android:textColor="#EC7700"
        android:text="TextView"
        android:textSize="@dimen/chat_msg_date_size" />
    <TextView
        android:id="@+id/threadNickname"
        android:layout_width="fill_parent"
        android:layout_height="21dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="68dp"
        android:layout_alignLeft="@id/msgDate"
        android:layout_marginTop="21dp"
        android:gravity="left"
        android:text="TextView"
        android:textSize="17sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/threadMessageCount"
        android:layout_width="fill_parent"
        android:layout_height="21dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="68dp"
        android:layout_alignLeft="@id/msgDate"
        android:layout_below="@id/threadNickname"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        android:text="TextView"
        android:textSize="14sp"
        android:textColor="@color/white"/>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/chat_image"
        android:layout_marginTop="15dp"
        />
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
    >
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:id="@+id/slidingPanel"
                                                     android:gravity="bottom" app:umanoPanelHeight="0dp">
        <fragment
            android:id="@+id/pelmelMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.nextep.pelmel.activities.MapActivity"
            />
        <LinearLayout android:orientation="horizontal"
            android:id="@+id/pelmelSnippetContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"  android:background="#272a2e"
            />
    
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/dialogShade"
        android:background="#D8000000"
        android:visibility="invisible"
        >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/dialogContainer"
        >
    </RelativeLayout>

</RelativeLayout>